<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testsplash"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 만보기 센서 사용 권한 추가 -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.SET_PREFERRED_APPLICATIONS" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.Gold_Being_Time.MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.Gold_Being_Time.Pedometer" />
        <activity android:name="com.example.Gold_Being_Time.Timer" />
        <activity android:name="com.example.Gold_Being_Time.DayMainActivity" />
        <activity android:name="com.example.Gold_Being_Time.DayMainActivity2" />
        <activity android:name="com.example.Gold_Being_Time.pedometerLockScreen" />
        <activity android:name="com.example.Gold_Being_Time.timerLockScreen" />
        <activity android:name="com.example.Gold_Being_Time.Complete" />
        <activity android:name="com.example.Gold_Being_Time.SubActivity" />

        <service android:name="com.example.Gold_Being_Time.PedometerService" />
        <service
            android:name="com.example.Gold_Being_Time.LockApp"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
    </application>

</manifest>